{
  "productName": "BerryEditor",
  "version": "0.1.0",
  "identifier": "com.berry.editor",
  "build": {
    "beforeDevCommand": "trunk serve --port 8081",
    "beforeBuildCommand": "trunk build --release",
    "devUrl": "http://localhost:8081/",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "BerryEditor",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
